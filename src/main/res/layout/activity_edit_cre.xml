<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/car"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".EditCre">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/black"
        android:alpha="0.7"
        android:layout_margin="18dp"
        app:cardElevation="2dp"
        app:cardCornerRadius="6dp"

        >

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/b_gp"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="20dp"

            android:background="@drawable/inpt"
            android:drawableLeft="@drawable/baseline_bloodtype_24"
            android:drawablePadding="12dp"
            android:hint="Blood Group"
            android:letterSpacing="0.2"
            android:textColor="@color/white"
            android:textColorHint="@color/white"


            tools:ignore="TouchTargetSizeCheck" />
        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="90dp"
            android:hint="Medical_Description"
            android:id="@+id/m_d"
            android:drawableLeft="@drawable/baseline_medical_information_24"
            android:drawablePadding="12dp"
            android:textAlignment="textStart"
            android:letterSpacing="0.2"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:background="@drawable/inpt"
          android:layout_marginHorizontal="20dp"


            />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/c_n"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="160dp"
            android:background="@drawable/inpt"

            android:drawableLeft="@drawable/baseline_contacts_24"
            android:drawablePadding="12dp"
            android:inputType="phone"
            android:hint="Contact number"
            android:letterSpacing="0.2"
            android:textColor="@color/white"
            android:textColorHint="@color/white"


            tools:ignore="TouchTargetSizeCheck" />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:hint="Submit"
            android:textColorHint="@color/white"
            android:background="@drawable/btn"
            android:id="@+id/s_b"
            android:layout_marginHorizontal="80dp"
            android:letterSpacing="0.1"
            android:textSize="19dp"
            android:layout_marginTop="240dp"
            />
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>